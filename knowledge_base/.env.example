# Application Configuration
APP_NAME=PageIndex Knowledge Base
DEBUG=false

# Database Configuration
DATABASE_URL=sqlite:///./data/knowledge_base.db

# File Storage
STORAGE_PATH=./data/documents
MAX_FILE_SIZE=104857600

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-2024-11-20
# OPENAI_BASE_URL=https://api.openai.com/v1  # Optional: for custom API endpoints

# Retrieval Configuration
DEFAULT_TOP_K=5
MAX_CONTEXT_TOKENS=16000
SEARCH_TEMPERATURE=0.3

# Indexing Configuration
TOC_CHECK_PAGE_NUM=20
MAX_PAGE_NUM_EACH_NODE=10
MAX_TOKEN_NUM_EACH_NODE=20000
IF_ADD_NODE_ID=yes
IF_ADD_NODE_SUMMARY=yes
IF_ADD_DOC_DESCRIPTION=yes
IF_ADD_NODE_TEXT=no

# Async Processing
MAX_CONCURRENT_INDEXING=3
INDEXING_TIMEOUT_SECONDS=600

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/knowledge_base.log

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# CORS Origins (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
